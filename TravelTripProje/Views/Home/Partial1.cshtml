@using TravelTripProje.Models.Siniflar
@model List<Blog>



<div class="con-bot">

    <div class="left">
        <img src="images/pic2.jpg" alt="" />
    </div>
    @foreach (var x in Model)
    {
        <div class="left-text">

            <h4>@x.Baslik</h4>
            <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
            <p>@x.Aciklama.Substring(0, 5)</p>
            <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Daha Fazlası...>></span></a></p>
    
   
        </div>
    }
</div>

    
    
    <div class="clear"></div>
</div>
